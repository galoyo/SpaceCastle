	<window width="0" height="0" fps="60" background="#000000" hardware="true" vsync="true" />
	<!-- include the following at the above code... antialiasing="3" if="cpp"-->
	
	<!--HTML5-specific-->
	<window if="html5" resizable="false" />
	
	<!--Desktop-specific-->
